@{
  Layout = "_Layout";
}
@using VendorTracker.Models;

<h2>Here are all the orders on file for @Model.Name</h2>

@if(Model.Orders.Count == 0)
{
  <p>No orders currently</p>
}

<ul>
  @foreach (Order item in Model.Orders)
  {
    <p class="orderName"><a href="/vendor/@Model.ID/order/@item.ID">@item.Name</a>, Order Placed On: @item.DatePlaced.ToString("d")</p>
    <p>Order ID: @item.ID</p>
  }
</ul>
<a href="/vendor/@Model.ID/order/new">Add an Order for @Model.Name</a>
  
  
  