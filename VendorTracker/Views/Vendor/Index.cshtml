@{
  Layout = "_Layout";
}

<h1>Your Vendors:</h1>
@using VendorTracker.Models;
  @if(Model.Count == 0)
  {
    <p>No Vendors Available To Display</p>
  }

  @foreach (Vendor item in Model)
  {
    <p class='vendorName'><a href="/vendor/@item.ID">@item.Name</a></p>
    <p class='vendorDescription'>@item.Description</p>
  }

