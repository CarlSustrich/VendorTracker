@{
  Layout = "_Layout";
}

<h1>Your Vendors:</h1>
@using VendorTracker.Models;
  @if(Model.Count == 0)
  {
    <p>No Vendors Available To Display</p>
  }

  @foreach (Vendor item in Model)
  {
    <p class='vendorName'><a href="/vendor/@item.ID">@item.Name</a>, Active Orders: @item.Orders.Count()</p>
    <p class="vendorDetails">* @item.Description</p><br>
  }

